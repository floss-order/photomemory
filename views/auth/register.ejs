<div class="card-container">
    <div class="card">
        <h1>Sign up</h1>
        <form action="/auth/sign-in" method="POST">
            <div class="input-container">
                <div class="row">
                    <label for="">Full Name</label>
                    <input type="text" name="full-name" placeholder="Type your full name">
                </div>
                <div class="row">
                    <label for="">Phone number</label>
                    <input type="number" name="phone" placeholder="+7 (xxx) xxx-xx-xx">
                </div>
                <div class="row">
                    <label for="">Address</label>
                    <input type="text" name="address" placeholder="Your address goes here...">
                </div>
                <div class="row">
                    <label for="">Zip code</label>
                    <input type="text" name="zip" placeholder="Type your zip code">
                </div>
                <div class="row">
                    <label for="">Email</label>
                    <input type="email" name="email" placeholder="john_doe@example.com">
                </div>
                <div class="row">
                    <label for="">Password</label>
                    <input type="password" name="password" placeholder="Type your password">
                </div>
            </div>
            <button type="submit">sign up</button>
        </form>
</div>